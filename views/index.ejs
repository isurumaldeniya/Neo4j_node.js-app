<html>

<body bgcolor="red">
    <form method="post" action="/movie/add">
        <label for="">Movie Name</label><br>
        <input type="text" , name="title">
        <br><br>
        <label for="">Year</label><br>
        <input type="text" , name="year">
        <br><br>
        <input type="submit" value="Submit">
    </form>
    <h1>Movie</h1>
    <ul>
        <% movies.forEach(function(movie){ %>
            <li>
                <%=movie.title %>
            </li>
            <% }) %>
    </ul>
</body>

</html>